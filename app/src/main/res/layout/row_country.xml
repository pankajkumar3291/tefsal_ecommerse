<?xml version="1.0" encoding="utf-8" standalone="no"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/filter_item_panel_LL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imgCountry"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/india" />

    <TextView
        android:id="@+id/txtCountryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/imgCountry"
        android:gravity="center_vertical"
        android:paddingStart="40dp"
        android:text="@string/row_country_txtCountryName_text" />

    <TextView
        fontPath="fonts/Lato-Regular.ttf"
        tools:ignore="MissingPrefix"
        android:id="@+id/txtCountryCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:paddingEnd="20dp"
        android:text="@string/row_country_txtCountryCode_text" />


</RelativeLayout>
