<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#212121" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical">

    <TextView android:layout_gravity="center" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_width="wrap_content" android:text="Country" android:textColor="@color/colorBWhite" android:textSize="@dimen/text_large" android:textStyle="bold"/>

    <LinearLayout android:id="@+id/country" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:weightSum="3">


        <LinearLayout android:gravity="center" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="wrap_content" android:orientation="vertical">

            <ImageView android:id="@+id/ic_beige_color_picker" android:layout_height="@dimen/width_btn_small" android:layout_width="@dimen/width_btn_small" android:padding="@dimen/margin_small" android:src="@drawable/shape_choose_beige_color"/>

            <TextView android:gravity="center" android:layout_below="@+id/ic_beige_color_picker" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="CHINA" android:textColor="@color/colorBWhite" android:textSize="@dimen/text_normal" android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout android:gravity="center" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="wrap_content" android:orientation="vertical">

            <ImageView android:id="@+id/ic_navy_color_picker" android:layout_height="@dimen/width_btn_small" android:layout_width="@dimen/width_btn_small" android:padding="@dimen/margin_small" android:src="@drawable/shape_choose_navy_color"/>

            <TextView android:gravity="center" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="SPAIN" android:textColor="@color/colorBWhite" android:textSize="@dimen/text_normal" android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout android:gravity="center" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="wrap_content" android:orientation="vertical">

            <ImageView android:id="@+id/ic_brown_color_picker" android:layout_alignParentRight="true" android:layout_height="@dimen/width_btn_small" android:layout_width="@dimen/width_btn_small" android:padding="@dimen/margin_small" android:src="@drawable/shape_choose_brown_color"/>

            <TextView android:gravity="center" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="JAPAN" android:textColor="@color/colorBWhite" android:textSize="@dimen/text_normal" android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
   <RelativeLayout android:background="@color/colorBlack" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_width="match_parent">
    <TextView android:layout_centerInParent="true" android:layout_height="wrap_content" android:layout_width="wrap_content" android:padding="20dp" android:text="SEE ALL" android:textColor="@color/colorBWhite" android:textSize="@dimen/text_normal" android:textStyle="bold"/>
  </RelativeLayout>
    <TextView android:layout_gravity="center" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_width="wrap_content" android:text="Brand" android:textColor="@color/colorBWhite" android:textSize="@dimen/text_large" android:textStyle="bold"/>
    <LinearLayout android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_mid" android:layout_width="match_parent" android:orientation="horizontal" android:weightSum="3">

        <LinearLayout android:gravity="center" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="wrap_content" android:orientation="vertical">

            <ImageView android:id="@+id/ic_white_color_picker" android:layout_height="@dimen/width_btn_small" android:layout_width="@dimen/width_btn_small" android:padding="@dimen/margin_small" android:src="@drawable/shape_choose_white_color"/>

            <TextView android:gravity="center" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="GUCCI" android:textColor="@color/colorBWhite" android:textSize="@dimen/text_normal" android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout android:gravity="center" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="wrap_content" android:orientation="vertical">

            <ImageView android:id="@+id/ic_olive_color_picker" android:layout_height="@dimen/width_btn_small" android:layout_width="@dimen/width_btn_small" android:padding="@dimen/margin_small" android:src="@drawable/shape_choose_olive_color"/>


            <TextView android:gravity="center" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="DUNHILL" android:textColor="@color/colorBWhite" android:textSize="@dimen/text_normal" android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout android:gravity="center" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="wrap_content" android:orientation="vertical">

            <ImageView android:id="@+id/ic_gray_color_picker" android:layout_alignParentRight="true" android:layout_height="@dimen/width_btn_small" android:layout_width="@dimen/width_btn_small" android:padding="@dimen/margin_small" android:src="@drawable/shape_choose_gray_color"/>

            <TextView android:gravity="center" android:layout_alignParentRight="true" android:layout_below="@+id/ic_gray_color_picker" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="VERSA" android:textColor="@color/colorBWhite" android:textSize="@dimen/text_normal" android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout android:background="@color/colorBlack" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_width="match_parent">
        <TextView android:layout_centerInParent="true" android:layout_height="wrap_content" android:layout_width="wrap_content" android:padding="20dp" android:text="SEE ALL" android:textColor="@color/colorBWhite" android:textSize="@dimen/text_normal" android:textStyle="bold"/>
    </RelativeLayout>
    <TextView android:layout_gravity="center" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_width="wrap_content" android:text="Pattern" android:textColor="@color/colorBWhite" android:textSize="@dimen/text_large" android:textStyle="bold"/>

    <LinearLayout android:id="@+id/pattern" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:weightSum="3">


        <LinearLayout android:gravity="center" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="wrap_content" android:orientation="vertical">

            <ImageView android:id="@+id/iv_white" android:layout_height="@dimen/width_btn_small" android:layout_width="@dimen/width_btn_small" android:padding="@dimen/margin_small" android:src="@drawable/shape_choose_beige_color"/>

            <TextView android:gravity="center" android:layout_below="@+id/ic_beige_color_picker" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="WHITE" android:textColor="@color/colorBWhite" android:textSize="@dimen/text_normal" android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout android:gravity="center" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="wrap_content" android:orientation="vertical">

            <ImageView android:id="@+id/diamond" android:layout_height="@dimen/width_btn_small" android:layout_width="@dimen/width_btn_small" android:padding="@dimen/margin_small" android:src="@drawable/shape_choose_navy_color"/>

            <TextView android:gravity="center" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="DIAMOND" android:textColor="@color/colorBWhite" android:textSize="@dimen/text_normal" android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout android:gravity="center" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="wrap_content" android:orientation="vertical">

            <ImageView android:id="@+id/bWhite" android:layout_alignParentRight="true" android:layout_height="@dimen/width_btn_small" android:layout_width="@dimen/width_btn_small" android:padding="@dimen/margin_small" android:src="@drawable/shape_choose_brown_color"/>

            <TextView android:gravity="center" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="B WHITE" android:textColor="@color/colorBWhite" android:textSize="@dimen/text_normal" android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout android:background="@color/colorBlack" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_width="match_parent">
        <TextView android:layout_centerInParent="true" android:layout_height="wrap_content" android:layout_width="wrap_content" android:padding="20dp" android:text="SEE ALL" android:textColor="@color/colorBWhite" android:textSize="@dimen/text_normal" android:textStyle="bold"/>
    </RelativeLayout>
</LinearLayout>
