<?xml version="1.0" encoding="utf-8" standalone="no"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header_view"
    android:layout_height="@dimen/nav_header_height"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/margin_mid"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_height="80dp"
        android:layout_width="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:background="@drawable/badge_shape"
            android:id="@+id/header_logo"
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:padding="10dp"
            android:src="@drawable/logo_white" />

        <TextView
            fontPath="fonts/Lato-Bold.ttf"
            tools:ignore="MissingPrefix"
            android:background="@drawable/badge_white"
            android:gravity="center"
            android:id="@+id/total_badge_txt"
            android:layout_height="30dp"
            android:layout_marginLeft="-20dp"
            android:layout_marginTop="-5dp"
            android:layout_toRightOf="@+id/header_logo"
            android:layout_width="30dp"
            android:text="@string/nav_header_main_total_badge_txt_text"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/user_name"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_small"
            android:layout_toRightOf="@+id/header_logo"
            android:layout_width="wrap_content"
            android:text="@string/nav_header_main_user_name_text"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_mid"
            android:textStyle="bold" />
    </RelativeLayout>


</RelativeLayout>
