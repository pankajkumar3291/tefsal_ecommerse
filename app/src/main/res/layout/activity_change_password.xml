<?xml version="1.0" encoding="utf-8" standalone="no"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:background="@drawable/sign_in_up_bg" android:fitsSystemWindows="true" android:layout_height="match_parent" android:layout_width="match_parent" tools:context="com.tefsalkw.activity.ChangePasswordActivity">

    <include android:id="@+id/toolbar" layout="@layout/toolbar_chng_pwd"/>
    <LinearLayout android:gravity="center" android:id="@+id/LL_content" android:layout_alignParentStart="true" android:layout_alignParentTop="true" android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical">
        <ImageView android:id="@+id/imageView" android:layout_height="150dp" android:layout_marginEnd="8dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp" android:layout_width="200dp" android:src="@drawable/logo_navy"/>

        <android.support.design.widget.TextInputLayout android:id="@+id/input_layout_current_pwd" android:layout_height="wrap_content" android:layout_marginEnd="8dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:layout_marginStart="8dp" android:layout_marginTop="40dp" android:layout_width="match_parent">

            <EditText android:background="@android:color/transparent" android:hint="@string/hint_current_pwd" android:id="@+id/current_pwd" android:inputType="textEmailAddress" android:layout_height="@dimen/MyAddress_EditText_height" android:layout_width="match_parent" android:singleLine="true" android:textColorHint="@color/colorTheme" android:textSize="@dimen/text_xsmall"/>

        </android.support.design.widget.TextInputLayout>

        <View android:background="@color/colorDivider" android:layout_height="1dp" android:layout_marginBottom="12dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:layout_width="match_parent"/>

        <android.support.design.widget.TextInputLayout android:id="@+id/input_layout_new_pwd" android:layout_height="wrap_content" android:layout_marginEnd="8dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:layout_marginStart="8dp" android:layout_marginTop="10dp" android:layout_width="match_parent">

            <EditText android:background="@android:color/transparent" android:hint="@string/hint_new_pwd" android:id="@+id/input_new_pwd" android:inputType="textEmailAddress" android:layout_height="@dimen/MyAddress_EditText_height" android:layout_width="match_parent" android:singleLine="true" android:textColorHint="@color/colorTheme" android:textSize="@dimen/text_xsmall"/>


        </android.support.design.widget.TextInputLayout>
        <View android:background="@color/colorDivider" android:layout_height="1dp" android:layout_marginBottom="12dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:layout_width="match_parent"/>


        <android.support.design.widget.TextInputLayout android:gravity="right" android:id="@+id/input_layout_confirm_pwd" android:layout_height="wrap_content" android:layout_marginEnd="8dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:layout_marginStart="8dp" android:layout_marginTop="10dp" android:layout_width="match_parent">


            <EditText android:background="@android:color/transparent" android:hint="@string/hint_confirm_pwd" android:id="@+id/input_confirm_pwd" android:layout_height="@dimen/MyAddress_EditText_height" android:layout_width="match_parent" android:singleLine="true" android:textColorHint="@color/colorTheme" android:textSize="@dimen/text_xsmall"/>

        </android.support.design.widget.TextInputLayout>
        <View android:background="@color/colorDivider" android:layout_height="1dp" android:layout_marginBottom="12dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:layout_width="match_parent"/>


        <Button android:background="@color/colorTheme" android:id="@+id/btn_chng_pwd" android:layout_height="wrap_content" android:layout_marginEnd="8dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:layout_marginStart="8dp" android:layout_marginTop="24dp" android:layout_width="match_parent" android:text="@string/btn_txt_chnge_pwd" android:textColor="@color/colorWhite" android:textSize="@dimen/text_normal"/>

    </LinearLayout>

</RelativeLayout>
