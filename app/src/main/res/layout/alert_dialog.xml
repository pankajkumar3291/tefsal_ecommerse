<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@android:color/transparent" android:gravity="center" android:id="@+id/linearLayoutParent" android:layout_height="fill_parent" android:layout_width="fill_parent" android:orientation="vertical">

    <FrameLayout android:clickable="true" android:focusable="true" android:id="@+id/frameLayout" android:layout_gravity="center" android:layout_height="wrap_content" android:layout_width="wrap_content">

        <LinearLayout android:background="@drawable/white_rounded_background" android:gravity="center" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_marginTop="40dp" android:layout_width="300dp" android:orientation="vertical" android:paddingLeft="20dp" android:paddingRight="20dp">

            <TextView android:gravity="center" android:id="@+id/alertTitle" android:layout_height="wrap_content" android:layout_marginTop="50dp" android:layout_width="wrap_content" android:text="@string/alert_dialog_alertTitle_text" android:textColor="@android:color/black" android:textSize="20sp"/>

            <TextView android:gravity="center" android:id="@+id/textViewError" android:layout_height="wrap_content" android:layout_marginBottom="15dp" android:layout_marginTop="10dp" android:layout_width="wrap_content" android:text="@string/alert_dialog_textViewError_text" android:textSize="18sp"/>

            <Button android:background="@color/colorAccent" android:id="@+id/buttonOK" android:layout_height="fill_parent" android:layout_marginBottom="10dp" android:layout_width="fill_parent" android:paddingBottom="8dp" android:paddingTop="8dp" android:text="@string/alert_dialog_buttonOK_text" android:textColor="@android:color/white" android:textSize="20sp"/>


        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/alertViewTitle" android:layout_gravity="center_horizontal" android:layout_height="90dp" android:layout_width="90dp" android:scaleType="centerCrop" android:src="@drawable/logo_tefsal" app:civ_border_color="@android:color/transparent" app:civ_border_width="0.0dip"/>
    </FrameLayout>
</LinearLayout>
