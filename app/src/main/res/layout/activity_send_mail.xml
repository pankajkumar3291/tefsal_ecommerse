<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_up_bg_blur"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.tefsalkw.activity.SendMailActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_sendmail" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Subject: " />

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/txt_email_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="80dp"
        android:background="@android:color/transparent"
        android:hint="Subject..."
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:textColorHint="@color/colorTheme"
        android:textSize="@dimen/text_normal" />

    <View
        android:layout_marginTop="10dp"
        android:id="@+id/devider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/txt_email_title"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/colorDivider" />


    <EditText
        android:background="@android:color/transparent"
        android:id="@+id/txt_email_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/devider"
        android:layout_margin="12dp"
        android:layout_marginTop="18dp"
        android:gravity="top"
        android:hint="@string/hint_email_message"
        android:inputType="textMultiLine"
        android:textSize="@dimen/text_normal" />


</RelativeLayout>
