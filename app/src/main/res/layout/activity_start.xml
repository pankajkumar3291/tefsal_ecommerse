<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg1"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.tefsalkw.activity.StartActivity">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:src="@drawable/logo_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/btn_layout_signin_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_signin"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/outline_button_shape"
            android:text="@string/title_signin"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_normal" />

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@drawable/outline_button_shape"
            android:text="@string/title_signup"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_normal" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/terms_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/action_terms"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_mid" />

        <TextView
            android:id="@+id/tncText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:text="@string/action_terms_of_use"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_mid"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/guestUserText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/terms_layout"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="@dimen/margin_small"
        android:text="@string/action_guest"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_normal"
        android:textStyle="bold" />

    <View
        android:id="@+id/seperator_view"
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:layout_below="@+id/guestUserText"
        android:layout_marginTop="5dp"
        android:background="@color/colorGray" />

</LinearLayout>
