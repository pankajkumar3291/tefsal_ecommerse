        <Button android:background="@color/colorNavyBlue" android:id="@+id/btn_finish" android:layout_height="wrap_content" android:layout_width="match_parent" android:text="@string/activity_measerment_btn_finish_text" android:textColor="@color/colorWhite"/>
    </LinearLayout>
