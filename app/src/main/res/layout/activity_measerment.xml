<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbarSize="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/ll_neck"
                        android:layout_width="90dp"
                        android:layout_height="110dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ic_neck"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_neck_blur" />

                        <View
                            android:id="@+id/neck_view"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_above="@+id/tv_neck"
                            android:background="@color/colorDivider" />

                        <TextView
                            android:id="@+id/tv_neck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="NECK"
                            android:textColor="@color/colorNavyBlue"
                            android:textSize="@dimen/text_xsmall"
                            android:visibility="invisible" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ll_sldr"
                        android:layout_width="90dp"
                        android:layout_height="110dp"

                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ic_shoulder"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_sldr_blur" />

                        <View
                            android:id="@+id/sldr_view"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_above="@+id/tv_shoulder"
                            android:background="@color/colorDivider" />

                        <TextView
                            android:id="@+id/tv_shoulder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="SHOULDER"
                            android:textColor="@color/colorNavyBlue"
                            android:textSize="@dimen/text_xsmall"
                            android:visibility="invisible" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ll_chest"
                        android:layout_width="90dp"
                        android:layout_height="110dp"

                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ic_chest"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_chest_blur" />

                        <View
                            android:id="@+id/chest_view"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_above="@+id/tv_chest"
                            android:background="@color/colorDivider" />

                        <TextView
                            android:id="@+id/tv_chest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="CHEST"
                            android:textColor="@color/colorNavyBlue"
                            android:textSize="@dimen/text_xsmall"
                            android:visibility="invisible" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ll_waist"
                        android:layout_width="90dp"
                        android:layout_height="110dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ic_waist"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_waist_blur" />

                        <View
                            android:id="@+id/waist_view"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_above="@+id/tv_waist"
                            android:background="@color/colorDivider" />

                        <TextView
                            android:id="@+id/tv_waist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="WAIST"
                            android:textColor="@color/colorNavyBlue"
                            android:textSize="@dimen/text_xsmall"
                            android:visibility="invisible" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ll_arm"
                        android:layout_width="90dp"
                        android:layout_height="110dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ic_arm"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_arm_blur" />

                        <View
                            android:id="@+id/arm_view"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_above="@+id/tv_arm"
                            android:background="@color/colorDivider" />

                        <TextView
                            android:id="@+id/tv_arm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="ARM"
                            android:textColor="@color/colorNavyBlue"
                            android:textSize="@dimen/text_xsmall"
                            android:visibility="invisible" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ll_wrist"
                        android:layout_width="90dp"
                        android:layout_height="110dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ic_wrist"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_wrist_blur" />

                        <View
                            android:id="@+id/wrist_view"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_above="@+id/tv_wrist"
                            android:background="@color/colorDivider" />

                        <TextView
                            android:id="@+id/tv_wrist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="WRIST"
                            android:textColor="@color/colorNavyBlue"
                            android:textSize="@dimen/text_xsmall"
                            android:visibility="invisible" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ll_frnt_height"
                        android:layout_width="90dp"
                        android:layout_height="110dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ic_f_height"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_height_front_blur" />

                        <View
                            android:id="@+id/f_height_view"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_above="@+id/tv_f_height"
                            android:background="@color/colorDivider" />

                        <TextView
                            android:id="@+id/tv_f_height"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="FRONT HEIGHT"
                            android:textColor="@color/colorNavyBlue"
                            android:textSize="@dimen/text_xsmall"
                            android:visibility="invisible" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ll_back_height"
                        android:layout_width="90dp"
                        android:layout_height="110dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ic_b_height"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_height_back_blur" />

                        <View
                            android:id="@+id/b_height_view"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_above="@+id/tv_b_height"
                            android:background="@color/colorDivider" />

                        <TextView
                            android:id="@+id/tv_b_height"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="BACK HEIGHT"
                            android:textColor="@color/colorNavyBlue"
                            android:textSize="@dimen/text_xsmall"
                            android:visibility="invisible" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/ll_custom"
                        android:layout_width="90dp"
                        android:layout_height="110dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ic_custom"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_custom_blur" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_above="@+id/tv_custom"
                            android:background="@color/colorDivider" />

                        <TextView
                            android:id="@+id/tv_custom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="CUSTOMIZED"
                            android:textColor="@color/colorNavyBlue"
                            android:textSize="@dimen/text_xsmall"
                            android:visibility="invisible" />
                    </RelativeLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <!--<View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorDivider" />-->
            <LinearLayout
                android:id="@+id/ll_sectionOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/l1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/textValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="0"
                            android:inputType="number"
                            android:maxLength="3"
                            android:textColorHint="@color/colorNavy"
                            android:textSize="80sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:text="."
                            android:textSize="30dp" />

                        <TextView
                            android:id="@+id/textSubValue"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:text="0"
                            android:textSize="30dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="37dp"
                        android:layout_marginTop="-15dp"
                        android:text="cm"
                        android:textSize="40sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/l1"
                    android:layout_marginBottom="50dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/seekbar_bg">

                        </View>

                        <SeekBar
                            android:id="@+id/seekBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="-10dp"
                            android:progressDrawable="@drawable/seekbar_progress_stroke"
                            android:thumb="@drawable/thumb_stick" />

                    </RelativeLayout>

                    <Button
                        android:id="@+id/Video_Btn"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="40dp"
                        android:background="@color/colorAccent"
                        android:text="REPLAY VIDEO"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/text_normal" />

                    <Button
                        android:id="@+id/viewtip_btn"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/outline_button"
                        android:text="VIEW TIP"
                        android:textSize="@dimen/text_normal" />
                </LinearLayout>


            </LinearLayout>

            <include
                android:id="@+id/ll_sectionTwo"
                layout="@layout/customized_section"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/tipsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:visibility="gone">

        <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:theme="@style/TransparentToolbar">

            <ImageButton
                android:id="@+id/btn_back_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:src="@drawable/ic_left_arrow" />

            <TextView
                android:id="@+id/toolbar_title"
                fontPath="fonts/Lato-Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="TIPS"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_mid"
                android:textStyle="bold"
                tools:ignore="MissingPrefix" />
        </android.support.v7.widget.Toolbar>

