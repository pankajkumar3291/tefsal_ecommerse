<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:background="@drawable/sign_in_up_bg" android:fitsSystemWindows="true" android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical" tools:context="com.tefsalkw.activity.ForgotPasswordActivity">

    <include android:id="@+id/toolbar" layout="@layout/toolbar"/>

    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:padding="@dimen/activity_vertical_margin">

        <TextView android:gravity="center" android:layout_height="wrap_content" android:layout_width="match_parent" android:text="@string/forgot_password_subtext" android:textColor="@color/colorAccent" android:textSize="@dimen/text_small"/>

        <android.support.design.widget.TextInputLayout android:id="@+id/input_layout_email" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginTop="40dp" android:layout_width="match_parent" app:layout_constraintHorizontal_bias="0.0" app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent" app:layout_constraintTop_toBottomOf="@+id/input_layout_email">

            <EditText android:background="@android:color/transparent" android:hint="@string/hint_email" android:id="@+id/input_email" android:inputType="textEmailAddress" android:layout_height="25dp" android:layout_width="match_parent" android:singleLine="true" android:textColor="@color/colorAccent" android:textColorHint="@color/colorAccent" android:textSize="@dimen/text_xsmall"/>

        </android.support.design.widget.TextInputLayout>

        <View android:background="@color/colorAccent" android:layout_height="1dp" android:layout_marginEnd="8dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginStart="8dp" android:layout_width="match_parent" app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent" app:layout_constraintTop_toBottomOf="@+id/input_layout_email"/>
        <Button android:background="@color/colorAccent" android:id="@+id/send_reset_request" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_width="match_parent" android:text="@string/action_send_reset" android:textColor="@color/colorWhite" android:textSize="@dimen/text_normal"/>

    </LinearLayout>
</LinearLayout>
