<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_width="match_parent" android:orientation="horizontal" android:padding="10dp" android:weightSum="10">

        <TextView android:id="@+id/title" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="wrap_content" android:textColor="#000000" android:textSize="12sp" android:textStyle="bold"/>
        <LinearLayout android:gravity="center" android:layout_height="wrap_content" android:layout_weight="3" android:layout_width="wrap_content" android:orientation="vertical">

            <ImageView android:background="@drawable/ic_arrow_drop_up_black_24dp" android:id="@+id/ivInc" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

            <TextView android:id="@+id/value" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
            <ImageView android:background="@drawable/ic_arrow_drop_down_black_24dp" android:id="@+id/ivDec" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
        </LinearLayout>
        <TextView android:id="@+id/rate" android:layout_height="wrap_content" android:layout_weight="3" android:layout_width="wrap_content" android:textColor="#000000" android:textSize="12sp" android:textStyle="bold"/>
        <CheckBox android:layout_height="wrap_content" android:layout_weight="2" android:layout_width="wrap_content"/>
    </LinearLayout>
