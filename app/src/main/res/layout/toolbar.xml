    <RelativeLayout android:gravity="center_vertical" android:id="@+id/view_cart_btn" android:layout_alignParentBottom="true" android:layout_gravity="right" android:layout_height="wrap_content" android:layout_marginEnd="5dp" android:layout_width="wrap_content" android:onClick="gotoCart" android:orientation="horizontal" android:visibility="gone">

        <ImageView android:id="@+id/header_logo" android:layout_height="48dp" android:layout_width="48dp" android:padding="10dp" android:src="@drawable/ic_shopping_cart_black_24dp"/>

