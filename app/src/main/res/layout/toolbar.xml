    <TextView android:ellipsize="end" android:id="@+id/toolbar_title" android:layout_gravity="center" android:layout_height="wrap_content" android:layout_width="wrap_content" android:maxLines="1" android:paddingLeft="5dp" android:paddingRight="5dp" android:singleLine="true" android:text="@string/toolbar_toolbar_title_text" android:textAllCaps="true" android:textColor="@color/colorAccent" android:textSize="@dimen/text_mid" android:textStyle="bold" fontPath="fonts/Lato-Bold.ttf" tools:ignore="MissingPrefix"/>

    <TextView android:gravity="center" android:id="@+id/next_txt" android:layout_gravity="right" android:layout_height="match_parent" android:layout_marginRight="16dp" android:layout_width="wrap_content" android:text="@string/toolbar_next_txt_text" android:textAllCaps="true" android:textColor="@color/colorAccent" android:textSize="@dimen/text_mid" android:visibility="gone"/>

    <TextView android:gravity="center" android:id="@+id/done_txt" android:layout_gravity="right" android:layout_height="match_parent" android:layout_marginRight="16dp" android:layout_width="wrap_content" android:text="@string/toolbar_done_txt_text" android:textAllCaps="true" android:textColor="@color/colorAccent" android:textSize="@dimen/text_mid" android:textStyle="bold" android:visibility="gone"/>

    <ImageView android:id="@+id/ic_filter" android:layout_gravity="right" android:layout_height="match_parent" android:layout_marginRight="16dp" android:layout_width="wrap_content" android:src="@drawable/ic_filter" android:visibility="gone"/>


