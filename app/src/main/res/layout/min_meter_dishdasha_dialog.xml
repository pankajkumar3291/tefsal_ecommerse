<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/round_blue_shape_cd"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_height="150dp"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content">

        <TextView
            android:id="@+id/txtHeader"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/min_meter_dishdasha_dialog_txtHeader_text"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_mid" />

        <TextView
            android:id="@+id/txt_min_meter"
            android:layout_below="@+id/txtHeader"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:text="@string/min_meter_dishdasha_dialog_txt_min_meter_text"
            android:textColor="@color/colorNavy"
            android:textSize="@dimen/text_normal" />


        <View
            android:background="#ccc"
            android:id="@+id/view_footer"
            android:layout_above="@+id/bottomBar"
            android:layout_height="1dp"
            android:layout_width="match_parent" />

        <LinearLayout
            android:id="@+id/bottomBar"
            android:layout_alignParentBottom="true"
            android:layout_height="56dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="100">
            <!-- android:background="@drawable/two_point_bottom_shape"-->
            <Button
                android:background="@android:color/transparent"
                android:id="@+id/dialog_yes_btn"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:layout_width="0dp"
                android:text="@string/min_meter_dishdasha_dialog_dialog_yes_btn_text"
                android:textSize="@dimen/text_mid" />

            <View
                android:background="#ccc"
                android:layout_height="match_parent"
                android:layout_width="1dp" />

            <Button
                android:background="@android:color/transparent"
                android:id="@+id/dialog_no_btn"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:layout_width="0dp"
                android:text="@string/min_meter_dishdasha_dialog_dialog_no_btn_text"
                android:textSize="@dimen/text_mid" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
