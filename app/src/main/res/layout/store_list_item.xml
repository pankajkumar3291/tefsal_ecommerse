<?xml version="1.0" encoding="utf-8" standalone="no"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height2"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height2"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_header_height2"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/gradient_transparent" />
        <LinearLayout
            android:id="@+id/LL_di"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-130dp"
            android:background="@color/colorGold"
            android:gravity="center"
            android:layoutDirection="ltr"
            android:orientation="horizontal"
            android:padding="5dp"
            android:rotation="35"
            android:transformPivotY="145dp"
            android:visibility="gone">

            <TextView

                android:id="@+id/txt_discount_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="130dp"
                android:gravity="center"
                android:text="@string/store_list_item_txt_discount_amount_text"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_large"
                android:textStyle="bold" />


        </LinearLayout>




        <LinearLayout
            android:id="@+id/LL_diRTL"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/colorGold"
            android:clipChildren="false"
            android:gravity="start"
            android:layoutDirection="ltr"
            android:orientation="vertical"
            android:padding="5dp"
            android:pivotX="40%"
            android:rotation="-35"
            android:visibility="gone">

            <TextView

                android:id="@+id/txt_discount_amount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/store_list_item_txt_discount_amount_text"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_large"
                android:textStyle="bold" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/transparent"
                android:gravity="start|center_vertical"
                android:maxLines="1"
                android:text="@string/store_list_item_title_text"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_mid"
                android:textStyle="bold"
                android:translationZ="99dp" />

            <RatingBar

                android:id="@+id/ratingbar"
                style="?attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:numStars="5"
                android:rating="3"
                android:stepSize="1"
                android:theme="@style/RatingBar"
                android:visibility="visible" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/text_max_delivery_days"
                fontPath="fonts/Lato-Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/store_list_item_text_max_delivery_days_text"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_mid"
                android:textStyle="bold"
                tools:ignore="MissingPrefix" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_max_delivery_days"
                android:text="@string/days"
                android:textColor="@color/colorWhite"
                android:translationZ="99dp" />

            <ImageView
                android:id="@+id/icon_delivery"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/text_max_delivery_days"
                android:src="@drawable/icon_delivery" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorTranspernt" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/storeCloseLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height2"
        android:layout_marginBottom="5dp"
        android:alpha="0.7"
        android:background="@color/colorAccent"
        android:clickable="false"
        android:orientation="vertical"
        android:translationZ="999dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:alpha="1"
            android:text="BUSY"
            android:textColor="@color/colorWhite"
            android:textSize="36sp"
            android:translationZ="1100dp" />

    </RelativeLayout>
</RelativeLayout>