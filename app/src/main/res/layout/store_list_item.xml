<?xml version="1.0" encoding="utf-8" standalone="no"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/main_layout" android:layout_height="@dimen/nav_header_height2" android:layout_marginBottom="5dp" android:layout_width="match_parent" android:orientation="vertical">

    <ImageView android:id="@+id/img" android:layout_height="@dimen/nav_header_height2" android:layout_width="match_parent" android:scaleType="centerCrop"/>

    <View android:background="@drawable/gradient_transparent" android:layout_alignParentBottom="true" android:layout_height="100dp" android:layout_width="match_parent"/>


    <LinearLayout android:background="@color/colorGold" android:gravity="center" android:id="@+id/LL_di" android:layout_alignParentEnd="true" android:layout_alignParentTop="true" android:layout_height="wrap_content" android:layout_marginTop="-130dp" android:layout_width="300dp" android:orientation="horizontal" android:padding="5dp" android:rotation="35" android:transformPivotY="145dp">

        <TextView android:gravity="center" android:id="@+id/txt_discount_amount" android:layout_gravity="center" android:layout_height="wrap_content" android:layout_marginStart="130dp" android:layout_width="wrap_content" android:text="@string/store_list_item_txt_discount_amount_text" android:textColor="@color/colorWhite" android:textSize="@dimen/text_large" android:textStyle="bold"/>


    </LinearLayout>

    <LinearLayout android:layout_alignParentBottom="true" android:layout_height="wrap_content" android:layout_marginBottom="20dp" android:layout_marginLeft="@dimen/activity_horizontal_margin" android:layout_width="match_parent" android:orientation="vertical">

        <TextView android:background="@android:color/transparent" android:gravity="start|center_vertical" android:id="@+id/title" android:layout_height="30dp" android:layout_marginBottom="10dp" android:layout_width="wrap_content" android:maxLines="1" android:text="@string/store_list_item_title_text" android:textAllCaps="true" android:textColor="@color/colorWhite" android:textSize="@dimen/text_mid" android:textStyle="bold" android:translationZ="99dp"/>

        <RatingBar android:id="@+id/ratingbar" android:layout_height="wrap_content" android:layout_marginTop="-10dp" android:layout_width="wrap_content" android:numStars="5" android:rating="3" android:stepSize="1" android:theme="@style/RatingBar" android:visibility="visible" style="?attr/ratingBarStyleSmall"/>
    </LinearLayout>

    <LinearLayout android:layout_alignParentBottom="true" android:layout_alignParentRight="true" android:layout_height="wrap_content" android:layout_marginBottom="20dp" android:layout_marginRight="@dimen/activity_horizontal_margin" android:layout_width="wrap_content">

        <RelativeLayout android:layout_height="wrap_content" android:layout_width="match_parent">

            <TextView android:id="@+id/text_max_delivery_days" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/store_list_item_text_max_delivery_days_text" android:textColor="@color/colorWhite" android:textSize="@dimen/text_mid" android:textStyle="bold"/>

            <TextView android:layout_below="@+id/text_max_delivery_days" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Days" android:textColor="@color/colorWhite" android:translationZ="99dp"/>

            <ImageView android:id="@+id/icon_delivery" android:layout_height="25dp" android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:layout_toRightOf="@+id/text_max_delivery_days" android:layout_width="25dp" android:src="@drawable/icon_delivery"/>

        </RelativeLayout>

    </LinearLayout>

    <View android:background="@color/colorTranspernt" android:layout_alignParentBottom="true" android:layout_height="1dp" android:layout_width="match_parent"/>
</RelativeLayout>
