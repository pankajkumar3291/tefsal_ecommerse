<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="10dp">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_left_arrow"
            android:padding="5dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/back_btn"
            android:gravity="center"
            android:orientation="vertical">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/txt_title"
                fontPath="fonts/Lato-Bold.ttf"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/subtxt_title"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Zara Daraa"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_mid"
                android:textStyle="bold"
                autofit:minTextSize="10sp"
                tools:ignore="MissingPrefix" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/subtxt_title"
                android:layout_width="230dp"
                android:layout_height="wrap_content"

                android:layout_below="@+id/txt_title"
                android:layout_centerHorizontal="true"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Casual daraa for dinner"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                android:textStyle="bold"
                autofit:minTextSize="8sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/qr_code_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/view_cart_btn1"
            android:background="@drawable/qr_code_image"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/view_cart_btn1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_shopping_cart_black_24dp"
            android:onClick="gotoCart"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/view_cart_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:onClick="gotoCart"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/header_logo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="10dp"
                android:src="@drawable/ic_shopping_cart_black_24dp" />

            <TextView
                android:id="@+id/total_badge_txt"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="-20dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/header_logo"
                android:background="@drawable/badge_yellow"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_xsmall" />


        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/LL_continer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/noDataText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="No data found!"
            android:textSize="@dimen/text_large" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:orientation="vertical">


                <android.support.v4.view.ViewPager
                    android:id="@+id/mainViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:background="@color/colorDivider">

                </android.support.v4.view.ViewPager>

                <RelativeLayout
                    android:id="@+id/viewPagerIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mainViewPager"
                    android:gravity="center"
                    android:padding="4dp">

                    <LinearLayout
                        android:id="@+id/viewPagerCountDots"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:orientation="horizontal" />

                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewPagerIndicator"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal">

                    <!--<TextView
                        android:id="@+id/txt_size_s"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="S"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/text_mid" />

                    <TextView
                        android:id="@+id/txt_size_m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="M"
                        android:textColor="@color/colorGray"
                        android:gravity="center"
                        android:textSize="@dimen/text_mid" />

                    <TextView
                        android:id="@+id/txt_size_l"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="L"
                        android:textColor="@color/colorGray"
                        android:gravity="center"
                        android:textSize="@dimen/text_mid" />

                    <TextView
                        android:id="@+id/txt_size_xl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="XL"
                        android:textColor="@color/colorGray"
                        android:gravity="center"
                        android:textSize="@dimen/text_mid" />-->

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/size2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/size"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/sizeRecyclerView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>


                <TextView
                    android:id="@+id/sizeGuide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/size2"

                    android:layout_centerHorizontal="true"
                    android:text="@string/text_sizeGuide_zaara_daraa"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_normal" />

                <RelativeLayout
                    android:id="@+id/colorAvailable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sizeGuide"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Color Available"
                        android:textColor="@color/colorDGray"
                        android:textSize="@dimen/text_normal"
                        android:textStyle="bold" />

                    <!--<Spinner-->
                    <!--android:id="@+id/spinner"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentRight="true" />-->

                    <TextView
                        android:id="@+id/color_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:text="PINK  BAIGE"
                        android:textColor="@color/colorDGray"
                        android:textSize="@dimen/text_normal"
                        android:textStyle="bold" />

                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/colorAvailable"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Description"
                        android:textSize="@dimen/text_mid"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_descp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="descp"
                        android:textSize="@dimen/text_normal" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LL_stock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/stockText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stock"
                        android:textSize="@dimen/text_mid"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/stockQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="0"
                        android:textSize="@dimen/text_mid"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/quntity_LL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/LL_stock"
                    android:padding="20dp"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/meter_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="25"
                        android:text="1"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:text="QUANTITY"
                        android:textSize="@dimen/text_normal"

                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="25"
                        android:background="@drawable/button_blank"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/less_btn"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_remove_black_24dp" />


                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorAccent" />

                        <ImageView
                            android:id="@+id/add_btn"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_add_black" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/quntity_LL"
                    android:background="@color/colorDivider"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/button"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:text="PRICE:"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_normal"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/add_cart_btn"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorAccent"
                        android:text="ADD TO CART"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>