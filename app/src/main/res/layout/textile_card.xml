<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:card_view="http://schemas.android.com/apk/res-auto" android:layout_height="wrap_content" android:layout_width="match_parent">

    <android.support.v7.widget.CardView android:id="@+id/card_view" android:layout_gravity="center" android:layout_height="match_parent" android:layout_width="match_parent" card_view:cardCornerRadius="@dimen/card_album_radius">

        <RelativeLayout android:layout_height="200dp" android:layout_width="match_parent">

            <ImageView android:background="@drawable/textile" android:id="@+id/iv_textile_card" android:layout_height="wrap_content" android:layout_width="match_parent"/>

         <TextView android:id="@+id/title" android:layout_height="wrap_content" android:layout_width="wrap_content" android:padding="10dp" android:textColor="#fafafa" android:textSize="20sp" android:textStyle="bold"/>



            <TextView android:id="@+id/value" android:layout_height="wrap_content" android:layout_marginTop="150dp" android:layout_width="wrap_content" android:padding="10dp" android:textColor="#fafafa" android:textSize="16sp" android:textStyle="bold"/>





        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
