                <ImageView android:id="@+id/less_btn" android:layout_height="30dp" android:layout_width="40dp" android:src="@drawable/ic_remove_black_24dp"/>


                <View android:background="@color/colorAccent" android:layout_height="match_parent" android:layout_width="1dp"/>

                <ImageView android:id="@+id/add_btn" android:layout_height="30dp" android:layout_width="40dp" android:src="@drawable/ic_add_black"/>

            </LinearLayout>


        </LinearLayout>
