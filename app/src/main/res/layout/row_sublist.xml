<?xml version="1.0" encoding="utf-8" standalone="no"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="wrap_content" android:layout_width="match_parent" android:padding="5dp">

    <ImageView android:id="@+id/imgDelete" android:layout_alignParentStart="true" android:layout_height="20dp" android:layout_width="20dp" android:src="@drawable/cart_item_delete_icon"/>

    <TextView android:gravity="start" android:id="@+id/cartItem" android:layout_height="wrap_content" android:layout_marginStart="10dp" android:layout_toRightOf="@+id/imgDelete" android:layout_width="wrap_content" android:text="@string/row_sublist_cartItem_text" android:textColor="@color/colorBlack" android:textSize="12sp" android:textStyle="bold"/>

    <TextView android:gravity="start" android:id="@+id/txtSize" android:layout_below="@+id/cartItem" android:layout_height="wrap_content" android:layout_marginStart="10dp" android:layout_toRightOf="@+id/imgDelete" android:layout_width="wrap_content" android:text="@string/row_sublist_txtSize_text" android:textSize="12sp" android:textStyle="bold"/>

</RelativeLayout>
