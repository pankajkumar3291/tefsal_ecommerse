<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llTailorContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mainLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:visibility="visible">


        <LinearLayout
            android:id="@+id/lltailorImg"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cart_item_delete1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:clickable="false"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/img_tailor"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/logo_tefsal"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/lltailorImg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTailorTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_mid"
                android:textStyle="bold" />


            <TextView
                fontPath="fonts/Lato-Regular.ttf"
                tools:ignore="MissingPrefix"
                android:id="@+id/txtTailorDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_small"
                android:textStyle="bold" />


            <TextView
                fontPath="fonts/Lato-Bold.ttf"
                tools:ignore="MissingPrefix"
                android:id="@+id/txtTailorQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="--"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_normal" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    fontPath="fonts/Lato-Bold.ttf"
                    tools:ignore="MissingPrefix"
                    android:id="@+id/txtTailorPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="--"
                    android:textColor="@color/colorRed"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    fontPath="fonts/Lato-Bold.ttf"
                    tools:ignore="MissingPrefix"
                    android:id="@+id/txtTailorPriceDicounted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:gravity="start"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="--"
                    android:textColor="@color/colorRed"
                    android:textSize="@dimen/text_normal" />
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/llSep"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/mainLL"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#bdbdbd" />

</RelativeLayout>