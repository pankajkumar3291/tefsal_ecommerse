<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:id="@+id/main_layout" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical">

    <LinearLayout android:gravity="center" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_width="match_parent" android:orientation="horizontal" android:weightSum="100">

        <TextView android:id="@+id/text_product_name" android:layout_height="wrap_content" android:layout_weight="50" android:layout_width="0dp" android:text="@string/tailor_product_item_text_product_name_text" android:textColor="@color/colorAccent" android:textSize="@dimen/text_normal" android:textStyle="bold"/>


        <LinearLayout android:gravity="center" android:layout_height="wrap_content" android:layout_weight="10" android:layout_width="0dp" android:orientation="vertical">

            <ImageView android:id="@+id/ic_up" android:layout_height="40dp" android:layout_width="40dp" android:src="@drawable/ic_arrow_drop_up_black_24dp"/>

            <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="1" android:textColor="@color/colorAccent" android:textSize="@dimen/text_normal"/>


            <ImageView android:id="@+id/ic_down" android:layout_height="40dp" android:layout_width="40dp" android:src="@drawable/ic_arrow_drop_down_black_24dp"/>
        </LinearLayout>

        <TextView android:gravity="right" android:id="@+id/text_price" android:layout_height="wrap_content" android:layout_weight="30" android:layout_width="0dp" android:text="@string/tailor_product_item_text_price_text" android:textColor="@color/colorAccent" android:textSize="@dimen/text_normal" android:textStyle="bold"/>

        <CheckBox android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_weight="10" android:layout_width="0dp"/>
    </LinearLayout>
    <View android:background="@color/colorDivider" android:layout_height="1dp" android:layout_width="match_parent"/>
</LinearLayout>
